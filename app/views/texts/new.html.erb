<div class="flex flex-col grow">
  <h1 class="text-2xl mb-4">Напиши здесь что-нибудь</h1>

  <%= form_with model: @text, class: 'grow flex flex-col',
    data: {turbo: false} do |form| %>
    <%= form.text_area :body,
      class: 'block w-full px-3 py-1.5 border border-solid border-gray-700
      bg-slate-700 focus:text-slate-100 focus:bg-slate-800
      font-mono focus:border-gray-800 focus:outline-none transition duration-150
      ease-in-out grow' %>
    <div class="mt-5">
      <%= form.submit "Сохранить",
        class: 'inline-block px-6 py-2.5 bg-emerald-600 text-white font-medium
          text-xs shadow-md hover:bg-emerald-700 hover:shadow-lg
          focus:bg-emerald-700 focus:shadow-lg focus:outline-none focus:ring-0
          active:bg-emerald-800 active:shadow-lg transition duration-150
          ease-in-out' %>
    </div>
  <% end %>
</div>
