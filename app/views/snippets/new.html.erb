<div class="flex flex-col h-full">
  <h1 class="text-2xl mb-4">Напиши здесь что-нибудь</h1>

  <%= form_with model: @snippet, class: 'grow flex flex-col', id: :snippet_form,
    data: {turbo: false} do |form| %>
    <%= form.text_area :body,
      required: true,
      class: 'block w-full px-3 py-1.5 border border-solid border-gray-700
      bg-slate-700 focus:text-slate-100 focus:bg-slate-800
      font-mono focus:border-gray-800 focus:outline-none transition duration-150
      ease-in-out grow' %>
  <% end %>

  <div class="mt-5" data-controller="snippets">
    <button class="btn btn-emerald" type="button" data-action="click->snippets#submitForm">Сохранить</button>
  </div>

  <%= render 'unsafe_confirm_modal' %>
</div>
